@model TheatreCMS3.Areas.Blog.Models.BlogAuthor

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script src="https://kit.fontawesome.com/634caf7d3f.js" crossorigin="anonymous"></script>
@*---------------tabs---------------------*@
<h2 class="Blog-Details-Header">Profile</h2>

<div class="Blog-Details-buttonContainer">
    <button class="DetailsTabLinks btn-dark" onclick="openInfo(event,'Author')" id="DetailesDefaultOpen"> Author Details</button>
    <button class="DetailsTabLinks btn-dark" onclick="openInfo(event,'Posts')">Blog Posts </button>
    <button class="DetailsTabLinks btn-dark" onclick="openInfo(event,'Contact')"> Contact</button>
    <button class="DetailsTabLinks btn-dark" onclick="openInfo(event,'Twitter')">Twitter</button>
</div>

@*----------------Main content---------------------*@
<div class="Blog-Details-ContentContaner">
    <div class="Blog-Details-photoContainer ">
        <img class="Blog-Details-Photo" src="~/Content/images/photo-Placeholder.jpg" />
    </div>

    <div class="Blog-Details-InfoPages">

        <div id="Author" class="DetailsTabContent">
            <div>
                <h4 class="Blog-Details-AuthorName">@Html.DisplayFor(model => model.Name)</h4>
                <div class="Blog-Details-Icons">
                    <a href="https://www.instagram.com/">
                        <i class="fa fa-instagram fa-2x Blog-Details-Social"></i>
                    </a> 
                    <a href="https://www.facebook.com/">
                        <i class="fa fa-facebook fa-2x Blog-Details-Social"></i>
                    </a>
                </div>
            </div>
         
            <p class="Blog-Details-Bio"> @Html.DisplayFor(model => model.Bio)</p>
            <div class="Blog-Details-dates">
                <div class="Blog-Details-Join col-10">
                    <div>
                        <span class="Blog-Details-JoinName">@Html.DisplayNameFor(model => model.Joined)</span>
                    </div>
                    <div class="Blog-Details-Title">
                        @Html.DisplayFor(model => model.Joined)
                    </div>
                </div>
                <div class="Blog-Details-Left col-10">
                    <div>
                        <span class="Blog-Details-JoinName">@Html.DisplayNameFor(model => model.Left)</span>
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Left)
                    </div>
                </div>
            </div>
        </div>
        <div id="Posts" class="DetailsTabContent">
                <div class="Blog-Details-ComingSoon">
                    Content coming soon.......
                </div>
        </div>
        <div id="Contact" class="DetailsTabContent">
                <div class="Blog-Details-ComingSoon">
                    Content coming soon.......
                </div>
        </div>
        <div id="Twitter" class="DetailsTabContent"> 
                <div class="Blog-Details-ComingSoon">
                     Content coming soon.......
                </div>
        </div>
    </div>
</div>
    <div class="btn-group Blog-Details-NavButtons">
        <div>
            <a href='@Url.Action("Index","BlogAuthors")' class='btn btn-dark BlogAuthor-Create-BackBtn'><i class="fa fa-arrow-circle-o-left"></i>Back to List</a>
        </div>
        <div>
            <a href='@Url.Action("Edit","BlogAuthors", new {id= Model.BlogAuthorId})' class='btn btn-success BlogAuthor-Create-BackBtn'><i class="fas fa-edit"></i>Edit</a>
        </div>
        <div class="Blog-Details-DeleteButton">
            <a href='@Url.Action("Delete","BlogAuthors", new {id= Model.BlogAuthorId})' class='btn btn-danger BlogAuthor-Create-BackBtn'><i class="fa fa-trash"></i></a>
        </div>

    </div>

